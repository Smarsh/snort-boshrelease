set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Available variables
# $BOSH_COMPILE_TARGET - where this package & spec'd source files are available
# $BOSH_INSTALL_TARGET - where you copy/install files to be included in package

echo "Installing unifiedbeat ..."
mkdir -p ${BOSH_INSTALL_TARGET}/bin
install -m 0755 ${BOSH_COMPILE_TARGET}/unifiedbeat/unifiedbeat.bin ${BOSH_INSTALL_TARGET}/bin/unifiedbeat

echo "Installing GeoLite2 database ..."
tar xvf unifiedbeat/GeoLite2-City_20170801.tar.gz
mkdir -p ${BOSH_INSTALL_TARGET}/GeoLite2
cp -R GeoLite2-City_20170801/* ${BOSH_INSTALL_TARGET}/GeoLite2
# install -m 0755 ${BOSH_COMPILE_TARGET}/unifiedbeat.bin ${BOSH_INSTALL_TARGET}/bin/unifiedbeat
